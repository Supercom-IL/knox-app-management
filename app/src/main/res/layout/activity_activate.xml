<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.supercom.knox.appmanagement.ActivateActivity">



   <CheckBox android:id="@+id/tv_admin"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="0dp"
       android:padding="10dp"
       android:button="@null"
       android:text="\tDevice Admin active"
       android:gravity="center|start"
       android:textSize="22dp"
       android:textColor="@color/activate_text_color"
       android:drawableStart="@drawable/activate_drawable"
       android:layout_height="wrap_content"/>

   <CheckBox android:id="@+id/tv_activate"
       app:layout_constraintTop_toBottomOf="@id/tv_admin"
       android:button="@null"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="0dp"
       android:padding="10dp"
       android:text="\tActivate Knox Licence"
       android:gravity="center|start"
       android:textSize="22dp"
       android:textColor="@color/activate_text_color"
       android:drawableStart="@drawable/activate_drawable"
       android:layout_height="wrap_content"/>

   <CheckBox android:id="@+id/tv_usb"
       android:button="@null"
       app:layout_constraintTop_toBottomOf="@id/tv_activate"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="0dp"
       android:padding="10dp"
       android:text="\tDisabled USB Plugin"
       android:gravity="center|start"
       android:textSize="22dp"
       android:textColor="@color/activate_text_color"
       android:drawableStart="@drawable/activate_drawable"
       android:layout_height="wrap_content"/>

   <CheckBox android:id="@+id/tv_mobile_data_roaming"
       android:button="@null"
       app:layout_constraintTop_toBottomOf="@id/tv_usb"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="0dp"
       android:padding="10dp"
       android:text="\tEnable Mobile Data Roaming"
       android:gravity="center|start"
       android:textSize="22dp"
       android:textColor="@color/activate_text_color"
       android:drawableStart="@drawable/activate_drawable"
       android:layout_height="wrap_content"/>

   <CheckBox android:id="@+id/tv_camera"
       android:button="@null"
       app:layout_constraintTop_toBottomOf="@id/tv_mobile_data_roaming"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="0dp"
       android:padding="10dp"
       android:text="\tPrevents use of camera"
       android:gravity="center|start"
       android:textSize="22dp"
       android:textColor="@color/activate_text_color"
       android:drawableStart="@drawable/activate_drawable"
       android:layout_height="wrap_content"/>

   <CheckBox android:id="@+id/tv_flightMode"
       android:button="@null"
       app:layout_constraintTop_toBottomOf="@id/tv_camera"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="0dp"
       android:padding="10dp"
       android:text="\tPrevents set flight mode"
       android:gravity="center|start"
       android:textSize="22dp"
       android:textColor="@color/activate_text_color"
       android:drawableStart="@drawable/activate_drawable"
       android:layout_height="wrap_content"/>

   <TextView android:id="@+id/tv_log"
       app:layout_constraintTop_toBottomOf="@id/tv_flightMode"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="@id/btn_activate"
       android:layout_width="0dp"
       android:padding="10dp"
       android:text=""
       android:textSize="14dp"
       android:textColor="#404000"
       android:layout_height="0dp"/>

   <Button android:id="@+id/btn_reboot"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/btn_usb"
       app:layout_constraintBottom_toTopOf="@id/btn_close"
       android:onClick="onRebootClick"
       android:layout_width="wrap_content"
       android:layout_margin="10dp"
       android:text="Reboot"
       android:layout_height="wrap_content"/>

   <Button android:id="@+id/btn_usb"
       app:layout_constraintStart_toEndOf="@id/btn_reboot"
       app:layout_constraintEnd_toStartOf="@id/btn_activate"
       app:layout_constraintBottom_toTopOf="@id/btn_close"
       android:onClick="onUSBClick"
       android:layout_width="wrap_content"
       android:layout_margin="10dp"
       android:text="USB"
       android:layout_height="wrap_content"/>

   <Button android:id="@+id/btn_activate"
       app:layout_constraintStart_toEndOf="@id/btn_usb"
       app:layout_constraintEnd_toStartOf="@id/btn_deactivate"
       app:layout_constraintBottom_toTopOf="@id/btn_close"
       android:onClick="onActivateClick"
       android:layout_width="0dp"
       android:layout_margin="10dp"
       android:text="Activate"
       android:layout_height="wrap_content"/>

   <LinearLayout
       android:visibility="gone"
       android:orientation="vertical"
       android:gravity="center"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv_camera"
       app:layout_constraintBottom_toTopOf="@id/btn_activate"
       android:layout_width="0dp"
       android:layout_height="0dp">

      <View
          android:layout_width="match_parent"
          android:layout_weight="1"
          android:layout_height="match_parent"/>
      <CheckBox
          android:layout_width="140dp"
          android:layout_height="140dp"
          android:layout_centerInParent="true"
          android:background="@drawable/activate_drawable"
          android:button="@null"
          android:tint="@color/activate_text_color" />

      <TextView
          android:layout_width="match_parent"
          android:textSize="23dp"
          android:textColor="@color/activate_text_color"
          android:layout_height="wrap_content"/>
      <View
          android:layout_width="match_parent"
          android:layout_weight="1"
          android:layout_height="match_parent"/>
   </LinearLayout>

   <Button android:id="@+id/btn_close"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:onClick="onCloseClick"
       android:layout_width="0dp"
       android:layout_margin="10dp"
       android:text="Close"
       android:layout_height="wrap_content"/>

   <Button android:id="@+id/btn_deactivate"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@id/btn_activate"
       app:layout_constraintBottom_toTopOf="@id/btn_close"
       android:layout_width="0dp"
       android:visibility="gone"
       android:onClick="onDeactivateClick"
       android:text="Deactivate"
       android:layout_height="wrap_content"/>

   <TextView android:id="@+id/cb_click"
       app:layout_constraintTop_toTopOf="@id/tv_admin"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="@id/tv_mobile_data_roaming"
       android:layout_width="0dp"
       android:layout_margin="10dp"
       android:layout_height="0dp"/>
</android.support.constraint.ConstraintLayout>